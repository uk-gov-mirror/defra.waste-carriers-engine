<% content_for :title, t(".heading.#{@registration_number_form.business_type}").html_safe %>
<%= render("waste_carriers_engine/shared/back", token: @registration_number_form.token) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @registration_number_form do |f| %>
      <%= render partial: "waste_carriers_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l">
        <%= t(".heading.#{@registration_number_form.business_type}") %>
      </h1>

      <%= f.govuk_text_field :company_no,
          label: { text: t(".company_no_label") },
          width: "one-half"
      %>

      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            <%= t(".detail_subheading") %>
          </span>
        </summary>
        <div class="govuk-details__text">
          <%= t(".detail.#{@registration_number_form.business_type}") %>
        </div>
      </details>

      <p class="govuk-body"><%= t(".explanation.#{@registration_number_form.business_type}") %></p>

      <%= f.govuk_submit t(".next_button") %>
    <% end %>
  </div>
</div>
